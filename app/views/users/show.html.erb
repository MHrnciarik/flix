<section class="user">
  <%= profile_image(@user) %>
  <h1><%= @user.name %></h1>
  <h2><%= @user.username %></h2>
  <h3><%= mail_to(@user.email) %></h3>
  <div class="actions">
    <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
    <%= link_to "Delete Account", @user, class: "button delete", data: { turbo_method: :delete, turbo_confirm: "Permanently delete yor account!?"} %>
  </div>
</section>